    "networkAccess": {
      "allowedDomains": [
        "none"
      ]
    }
  },
  "name": "figma-create-icon-sets",
  "type": "module",
  "dependencies": {
    "@figma/plugin-typings": "1.93.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
