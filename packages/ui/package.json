{
  "name": "@repo/ui",
  "version": "0.0.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    ".": "./index.ts"
  },
  "scripts": {
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "build": "bun run build:css",
    "build:css": "tailwindcss --input ./styles.css --output dist/index.css",
    "watch": "bun run build:css && concurrently bun:watch:css",
    "watch:css": "tailwindcss --input ./styles.css --output dist/index.css --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "postcss": "^8.4.33",
    "preact": ">=10",
    "tailwindcss": ">=3",
    "typescript": ">=4"
  }
}
